#include <stdio.h>

int main() {
    int n;

    printf("Entrer une limite : ");
    scanf("%d", &n);

    int tableau[n+1];

    // 1) On suppose que tous les nombres sont premiers
    for (int i = 0; i <= n; i++) {
    tableau[i] = 1;
    }

    // 0 et 1 ne sont pas premiers
    tableau[0] = 0;
    tableau[1] = 0;

    // 2) Crible d'Eratosthène
    for (int p = 2; p * p <= n; p++) {
        if (tableau[p] == 1) {
            // On élimine tous les multiples de p
            for (int j = p * p; j <= n; j += p) {
                tableau[j] = 0;
            }
        }
    }

    // 3) Affichage des nombres premiers
    printf("Nombres premiers jusqu'à %d :\n", n);
    for (int i = 2; i <= n; i++) {
        if (tableau[i] == 1) {
            printf("%d ", i);
        }
    }

    return 0;
}
